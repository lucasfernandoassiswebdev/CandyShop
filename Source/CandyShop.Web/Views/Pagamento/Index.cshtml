@{ Layout = null; }

@model IEnumerable<CandyShop.Core.Pagamento.Dto.PagamentoDto>

<script>
    $(document).ready(function () {
        $('select').material_select();
    });
</script>

<h2 align="center"><font color="red">Pagamentos</font></h2>

<div class="row black-text" id="filtro">
    <div id="icone"><i class="small material-icons">date_range</i></div>
    <div id="dropdown" class="input-field black-text">        
        <select id="FiltroMes">
            <option class="opts black-text" value="" selected disabled>Escolha um mês</option>
            <option value="1">Janeiro</option>
            <option value="2">Fevereiro</option>
            <option value="3">Março</option>
            <option value="4">Abril</option>
            <option value="5">Maio</option>
            <option value="6">Junho</option>
            <option value="7">Julho</option>
            <option value="8">Agosto</option>
            <option value="9">Setembro</option>
            <option value="10">Outubro</option>
            <option value="11">Novembro</option>
            <option value="12">Dezembro</option>            
        </select> 
        <label>Filtrar Mês</label>              
    </div>
</div>

<div id="tabela">
    <table class="striped">
        <thead>
            <tr>
                <th>Data do Pagamento</th>
                <th>Valor Pago</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>20/09/2017</td>
                <td>$2.00</td>
            </tr>
            <tr>
                <td>13/09/2017</td>
                <td>$7.00</td>
            </tr>
            <tr>
                <td>07/09/2017</td>
                <td>$3.00</td>
            </tr>
            <tr>
                <td>01/09/2017</td>
                <td>$10.00</td>
            </tr>
            <tr>
                <td>24/08/2017</td>
                <td>$1.50</td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    #tabela {
        width: auto;
        font-size: small;
    }

    #icone {
        display: inline-block;
        color: brown;
    }

    #dropdown {
        position: static;
        display: inline-block;       
        font-size: small;                
        text-align:right;        
    }

    #filtro {
        text-align: center;          
    }          
    
    .input-field {
        font-size: 10pt;

    }
</style>

<div align="center"><a href="#!" onclick="AjaxJs.voltarInicio()">Voltar</a></div>

<script>
    $(document).ready(function() {
        $(".penis").last().removeClass('select-dropdown');
    });
</script>