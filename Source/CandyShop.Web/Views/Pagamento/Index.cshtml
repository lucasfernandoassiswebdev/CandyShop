@{ Layout = null; }

@model IEnumerable<CandyShop.Core.Pagamento.Dto.PagamentoDto>

<script>
    $(document).ready(function () {
        $('select').material_select();
        $(".penis").last().removeClass('select-dropdown');
    });

</script>


<h2 align="center"><font color="red">Pagamentos</font></h2>

<div  id="filtro">
    <div id="icone"><i class="small material-icons">date_range</i></div>
    <div id="dropdown" class="input-field">        
        <select id="FiltroMes">
            <option class="black-text" value="" selected disabled>Escolha um mês para filtrar</option>
            <option value="1">Janeiro</option>
            <option value="2">Fevereiro</option>
            <option value="3">Março</option>
            <option value="4">Abril</option>
            <option value="5">Maio</option>
            <option value="6">Junho</option>
            <option value="7">Julho</option>
            <option value="8">Agosto</option>
            <option value="9">Setembro</option>
            <option value="10">Outubro</option>
            <option value="11">Novembro</option>
            <option value="12">Dezembro</option>            
        </select>         
    </div>
</div>

<div id="tabela">
    <table class="striped">
        <thead>
        <tr>
            <th>Data do Pagamento</th>
            <th>Valor Pago</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>20/09/2017</td>
            <td>$2.00</td>
            <td><a class="btn-floating btn-sm waves-effect waves-light red lighten-2"><i class="material-icons">info_outline</i></a></td>
        </tr>
        <tr>
            <td>13/09/2017</td>
            <td>$7.00</td>
            <td><a class="btn-floating btn-sm waves-effect waves-light red lighten-2"><i class="material-icons">info_outline</i></a></td>
        </tr>
        <tr>
            <td>07/09/2017</td>
            <td>$3.00</td>
            <td><a class="btn-floating btn-sm waves-effect waves-light red lighten-2"><i class="material-icons">info_outline</i></a></td>
        </tr>
        <tr>
            <td>01/09/2017</td>
            <td>$10.00</td>
            <td><a class="btn-floating btn-sm waves-effect waves-light red lighten-2"><i class="material-icons">info_outline</i></a></td>
        </tr>
        <tr>
            <td>24/08/2017</td>
            <td>$1.50</td>
            <td><a class="btn-floating btn-sm waves-effect waves-light red lighten-2"><i class="material-icons">info_outline</i></a></td>
        </tr>
        </tbody>
    </table>
</div>
<br/>
<div align="center">
    <a class="waves-effect waves-light btn" onclick="AjaxJs.voltarInicio()"><i class="material-icons left">arrow_back</i>Voltar</a>
</div>

<script>
    $('.btn-floating').on('click', function () { AjaxJs.detalhePagamento(); })
</script>

<style>
    #tabela {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        text-align: center
    }

    #filtro {
        text-align: center;          
    }

    #icone {
        display: inline-block;
        color: brown;
    }

    #dropdown {
        position: static;
        display: inline-block;       
        font-size: small;
        width: 200pt;                        
    }

</style>

