@model IEnumerable<CandyShop.Application.ViewModels.CompraViewModel>

@{ Layout = null; }

<link rel="stylesheet" type="text/css" href="../../Content/Admin/historico.css"/>

<script>
    $('.dropdown-button').dropdown({
            inDuration: 300,
            outDuration: 225,
            constrainWidth: false, 
            gutter: 0, 
            belowOrigin: false, 
            alignment: 'left', 
            stopPropagation: false
        }
    );
</script>

<h4 class="center pink-text">@ViewBag.tituloPagina</h4>

@if (ViewBag.drop == 0)
{
    <div id="filtro" class="row">
        <a class='dropdown-button btn' href='#' data-activates='dropdownMes'><i class="material-icons left">date_range</i>Escolha o mês!</a>
        <ul id='dropdownMes' class='dropdown-content'>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(1)">Janeiro</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(2)">Fevereiro</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(3)">Março</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(4)">Abril</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(5)">Maio</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(6)">Junho</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(7)">Julho</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(8)">Agosto</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(9)">Setembro</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(10)">Outubro</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(11)">Novembro</a></li>
            <li><a href="#!" onclick="AjaxJsCompra.listarCompraMes(12)">Dezembro</a></li>
        </ul>
    </div>
}
<style>
    
</style>
<div id ="tabela">    
    <table class="striped centered">
        <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Data da Compra
            </th>
            <th>
                Valor da Compra
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.NomeUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCompra)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorCompra)
                    </td>
                    <td>
                        <a class="btn-floating btn-sm waves-effect waves-light  light-blue darken-3" onclick="AjaxJsCompra.detalheCompra(@item.IdCompra);"><i class="material-icons">info_outline</i></a>
                    </td>                    
                    <td>
                        @Html.ActionLink("Editar", "Edit", new {/* id=item.PrimaryKey */}) |                        
                        @Html.ActionLink("Deletar", "Delete", new {/* id=item.PrimaryKey */})
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
