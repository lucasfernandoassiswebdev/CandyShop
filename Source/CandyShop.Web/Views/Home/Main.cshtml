@model IEnumerable<CandyShop.Application.ViewModels.ProdutoViewModel>

@{ Layout = null; }

<style>
    img {
        max-width: 100%;
    }
</style>
<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col s12 m4 l2">
            <div class="card">
                <div class="card-image">
                    @{ string nomeA = @produto.IdProduto + "_A.jpg";}
                    <img src="@TempData["caminhoImagensProdutos"]/@nomeA?d=@DateTime.Now.Ticks">
                    <span class="card-title flow-text">@produto.NomeProduto</span>
                    <a href="#modal1" id="abreModal" class="modal-trigger btn-floating halfway-fab waves-effect waves-light red tooltipped" data-position="bottom" data-delay="50" data-tooltip="Nome do produto R$ 0,80" data-Preco="@produto.PrecoProduto" data-Nome="@produto.NomeProduto" data-Imagem="@TempData["caminhoImagensProdutos"]/@nomeA?d=@DateTime.Now.Ticks"><i class="material-icons">add</i></a>
                </div>
                <div class="card-content">
                    <p>R$ @produto.PrecoProduto</p>
                </div>
            </div>
        </div>
    }
</div>


