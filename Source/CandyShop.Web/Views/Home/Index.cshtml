@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/index.css" rel="stylesheet" />

<script type="text/javascript" src="../../Js/scriptsIndex.js"></script>

<div class="row">
   <form class="center white batata">
       <h1 class="center"><font color="browm">Candy</font> <font color="red">Shop</font></h1>
       <div class="row center batatao">
            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input id="cpf" name="CPF" type="text" class="validate red-text">
                <label for="cpf">Login</label>
            </div>
        </div>
        <div class="row batatao">
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <input id="senha" type="password" class="validate red-text">
                <label for="senha">Senha</label>
            </div>
        </div>
        <button class="waves-effect waves-light btn"><i class="material-icons left">send</i>@Html.ActionLink("Logar","Padrao")</button>
    </form>
</div>

