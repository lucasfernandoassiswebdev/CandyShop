
@{
    ViewBag.Title = "Padrao";
}

<script src="~/Js/Ajax.js?d=@DateTime.Now.Ticks" type="text/javascript"></script>
<script>
    AjaxJs.init({
        main: '@Url.Action("Main", "Home")',
        pagamento: '@Url.Action("Index", "Pagamento")',
        historicoCompra: '@Url.Action("Historico", "Compra")'
    });

    $(document).ready(function() {
        $('select').material_select();
    });
</script>

<link href="~/Content/Main.css" rel="stylesheet" />

<!--modal de quantidade-->
<div id="modal1" class="modal">
    <div class="modal-content center">
        <h3>Quantidade</h3>
        <form class="center">
            <input type="text" id="quantidade" class="center" autocomplete="off" />
        </form>
    </div>
    <div class="modal-footer">
        <a href="#modal2" id="confirmacao" class="modal-trigger modal-close waves-effect waves-green btn-flat brown-text">Confirma</a>
    </div>
</div>

<!--modal de confirmação-->
<div id="modal2" class="modal">
    <div class="modal-content center">
        <h3>Confirmar venda?</h3>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Confirmar</a>
    </div>
</div>

<!--modal de compra-->
<div id="modal3" class="modal">
    <div class="modal-content center">
        <h3>Carrinho</h3>
        <div class="collection">
            <a href="#!" class="collection-item">Alvin</a>
            <a href="#!" class="collection-item">Alvin</a>
            <a href="#!" class="collection-item">Alvin</a>
            <a href="#!" class="collection-item">Alvin</a>
        </div>
    </div>
    <div class="modal-footer">
        <a href="Index.cshtml" class="right modal-action modal-close waves-effect waves-green btn-flat">Confirmar venda</a>
        <a href="#!" class=" right modal-action waves-effect waves-green btn-flat brown-text">Limpar</a>
    </div>
</div>

