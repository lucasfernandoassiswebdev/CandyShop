@{
    ViewBag.Title = "Index";
}

<script type="text/javascript" src="../../Js/scriptsAdmin.js?d=@DateTime.Now.Ticks"></script>
<script type="text/javascript" src="../../Js/Ajax.js?d=@DateTime.Now.Ticks"></script>
<script>
    $(document).ready(function () {
        AjaxJs.init({
            main: '@Url.Action("Listar", "Produto")',
            //usuários
            listaUsuario: '@Url.Action("Index", "Usuario")',
            mostraSaldo: '@Url.Action("Index", "Shop")',
            cadastroUsuario: '@Url.Action("Cadastrar","Usuario")',
            concluirCadastroUsuario: '@Url.Action("Cadastrar", "Usuario")',
            concluirEdicaoUsuario: '@Url.Action("Editar","Usuario")',
            detalheUsuario: '@Url.Action("Detalhes","Usuario")',
            editarUsuario: '@Url.Action("Editar","Usuario")',
            desativarUsuario: '@Url.Action("Desativar", "Usuario")',
            desativarUsuarioConfirmado: '@Url.Action("DesativarUsuario", "Usuario")',
            listarUsuarioInativo: '@Url.Action("ListarInativos", "Usuario")',
            listarUsuarioEmDivida: '@Url.Action("ListarUsuariosEmDivida", "Usuario")',
            
            //produtos
            listaProduto: '@Url.Action("Listar", "Produto")',
            cadastrarProduto: '@Url.Action("CadastrarProduto", "Produto")',
            concluirCadastroProduto: '@Url.Action("CadastrarProduto", "Produto")',
            detalheProduto: '@Url.Action("DetalheProduto", "Produto")',
            editarProduto: '@Url.Action("EditarProduto", "Produto")',
            concluirEdicaoProduto: '@Url.Action("EditarProduto", "Produto")',
            desativarProduto: '@Url.Action("DesativarProduto", "Produto")',
            desativarProdutoConfirmado: '@Url.Action("DesativarProdutoConfirmado", "Produto")',
            listarInativos: '@Url.Action("ListarInativos", "Produto")',
            listarProdutoPorNome: '@Url.Action("ProcurarProduto", "Produto")'
        });
    })
</script>

<link rel="stylesheet" type="text/css" href="../../Content/indexAdmin.css">

<style>
    .branco {
        color: white !important;
    }

    .side-nav li > a {
        color: black;
    }

    .side-nav li>a>i, .side-nav li>a>[class^="mdi-"], .side-nav li>a li>a>[class*="mdi-"], .side-nav li>a>i.material-icons {
        color: black;
    }
</style>
<!--modal de pesquisa de usuários-->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h3 class="center">Nome do usuário</h3>
        <form>
            <input type="text" id="nomeUsuario" autocomplete="off" />
        </form>
    </div>
    <div class="modal-footer center">
        <a href="#!" class="btn waves waves-light modal-close waves-effect waves-green btn-flat brown-text">Encontrar<i class="material-icons right brown-text">search</i></a>
    </div>
</div>

<!--modal de pesquisa de produtos-->
<div id="modal2" class="modal">
    <div class="modal-content">
        <h3 class="center">Nome do produto:</h3>
        <form>
            <input type="text" id="nomeProduto" autocomplete="off" />
        </form>
    </div>
    <div class="modal-footer center">
        <a href="#!" onclick="AjaxJs.listarProdutoPorNome()" class="btn waves waves-light modal-close waves-effect waves-green btn-flat brown-text">Encontrar<i class="material-icons right brown-text">search</i></a>
    </div>
</div>

<ul id="slide-out" class="side-nav fixed brown darken-3">
    <li class="white-text">
        @*<img src="~/Imagens/logo.png" style="max-width: 100%; margin-top: 10%;margin-left:5%"/>*@
        <h4>Candy <font style="color:red">Shop</font></h4>
    </li>
    <li class="divider"></li>
    <li><a class="dropdown-button white-text" href="#!"><i class="material-icons left white-text branco">account_box</i>ADMINISTRADOR</a></li>
    <li>
        <div class="divider"></div>
    </li>
    <li>
        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header white-text">
                    <i class="material-icons left">face</i>USUÁRIOS
                </div>
                <div class="collapsible-body">
                    <ul>
                        <li><a class="closeMenu" href="#!" onclick="AjaxJs.listaUsuario()"><i class="material-icons">list</i>Listar usuários</a></li>
                        <li><a class="closeMenu" href="#!" onclick="AjaxJs.listaUsuario()"><i class="material-icons">attach_money</i>Usuários em dívida</a></li>
                        <li><a class="close-menu modal-trigger" href="#modal1"><i class="material-icons">find_in_page</i>Encontrar usuário</a></li>
                        <li><a class="closeMenu" href="#!" onclick="AjaxJs.cadastroUsuario()"><i class="material-icons">account_circle</i>Inserir Usuário</a></li>
                        <li><a class="closeMenu" href="#!" onclick="AjaxJs.listarUsuarioInativo()"><i class="material-icons">list</i>Listar Inativos</a></li>
              </ul>
                </div>
            </li>

            <li>
                <div class="collapsible-header white-text">
                    <i class="material-icons left">shopping_cart</i>PRODUTOS
                </div>
                <div class="collapsible-body">
                    <ul class="brown-text">
                        <li><a href="#!" class="closeMenu" onclick="AjaxJs.listaProduto()"><i class="material-icons">list</i>Listar produtos</a></li>
                        <li><a href="#modal2" class="closeMenu modal-trigger"><i class="material-icons">find_in_page</i>Encontrar produto</a></li>
                        <li><a href="#!" class="closeMenu" onclick="AjaxJs.cadastrarProduto();"><i class="material-icons">add_shopping_cart</i>Inserir produto</a></li>
                        <li><a href="#!" class="closeMenu" onclick="AjaxJs.listarInativos()"><i class="material-icons">list</i>Listar Inativos</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </li>
    <li><a class="dropdown-button white-text" href="#!" onclick="AjaxJs.mostraSaldo()"><i class="material-icons left white-text">monetization_on</i>CRÉDITO ATUAL DA LOJA</a></li>
    <li>
        <div class="divider"></div>
    </li>
    <li><a class="dropdown-button white-text" href="#!"><i class="material-icons left white-text">power_settings_new</i>SAIR</a></li>
</ul>

