@model CandyShop.Application.ViewModels.UsuarioViewModel

@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/Content/Usuario/detalhesUsuario.css?d=@DateTime.Now.Ticks"/>

<script>
    $(document).ready(function () {
        $('.cpf').each(function () {
            $(this).html(mcpf($(this).html()));
        });
    });

    function mcpf(v) {
        v = v.replace(/\D/g, "");
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d{1,2})$/, "$1-$2");

        return v;
    }
</script>

<div class="center container">
    <h4 class="pink-text">Detalhes do usuário :</h4>
    <hr />
    <div>
        @{ string caminho = @Model.Cpf + ".jpg";}
        <img id="imagemUsuario" src="@TempData["caminhoImagensUsuarios"]/@caminho?d=@DateTime.Now.Ticks" />
        <table class="striped highlight centered bordered" style="margin-bottom:50px">
            <tbody>
                <tr>
                    <td>Nome: </td>
                    <td>@Model.NomeUsuario</td>
                </tr>
                <tr>
                    <td>CPF: </td>
                    <td class="cpf">@Model.Cpf</td>
                </tr>
                <tr>
                    <td>Saldo do usuário: </td>
                    <td>R$ @Model.SaldoUsuario</td>
                </tr>
                <tr>
                    <td>Status do usuário: </td>
                    <td>@if (Model.Ativo == "A") {<text>Ativo</text>}else {<text>Inativo</text>}</td>
                </tr>
            </tbody>
        </table>

        <a class="waves-effect waves-light btn" onclick="AjaxJsUsuario.listaUsuario()"><i class="material-icons left">arrow_back</i>Voltar</a>
    </div>
</div>

