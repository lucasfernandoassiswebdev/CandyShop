@model CandyShop.Application.ViewModels.Usuario

@{
    Layout = null;
}

<style>
    .corpo {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        text-align: left;
    }
</style>

<div class="corpo left">    
<h4><font color="brown">Detalhes</font><font color="red"> do Produto :</font></h4>
<hr/>
<form class="col s12" style="margin-left: -10%">
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Model.NomeUsuario
        </dd>

        <dt>
            CPF
        </dt>

        <dd>
            @Model.Cpf
        </dd>

        <dt>
            Saldo do usuário
        </dt>

        <dd>
            @Model.SaldoUsuario
        </dd>
    </dl>

    <a class="waves-effect waves-light btn" onclick="AjaxJs.listaUsuario()"><i class="material-icons left">arrow_back</i>Voltar</a>
</form>
</div>