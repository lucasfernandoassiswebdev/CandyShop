@model IEnumerable<CandyShop.Application.ViewModels.Usuario>

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            CPF
        </th>
        <th>
            Nome
        </th>
        <th>
            Saldo
        </th>
        <th></th>
    </tr>

    @foreach (var usuario in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => usuario.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => usuario.NomeUsuario)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => usuario.SaldoUsuario)
            </td>
            <td>
                <a class="btn-floating btn-sm waves-effect waves-light blue darken-1" onclick="AjaxJs.detalheUsuario('@usuario.Cpf');"><i class="material-icons">info_outline</i></a>
            </td>
            <td>
                <a class="btn-floating btn-sm waves-effect waves-light orange" onclick="AjaxJs.editarUsuario();"><i class="material-icons">edit</i></a>
            </td>
            <td>
                <a class="btn-floating btn-sm waves-effect waves-light red" onclick="AjaxJs.excluirUsuario();"><i class="material-icons">remove_shopping_cart</i></a>
            </td>
        </tr>
    }

</table>

