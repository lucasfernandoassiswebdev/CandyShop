@model IEnumerable<CandyShop.Application.ViewModels.UsuarioViewModel>

@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/Content/Usuario/IndexUsuario.css?d=@DateTime.Now.Ticks" />

<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();

        $('.cpf').each(function () {
            $(this).html(mcpf($(this).html()));
        });
    });

    function mcpf(v) {
        v = v.replace(/\D/g, "");
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d)/, "$1.$2");
        v = v.replace(/(\d{3})(\d{1,2})$/, "$1-$2");
        return v;
    }
</script>

<div class="row">
    <h3 class="center pink-text">@TempData["nomeLista"].ToString()</h3>
    @if (!Model.Any())
    {
        <p align="center">Nenhum registro encontrado</p>
    }
    else
    {
        <div class="col s12 desapear">
            <table class="bordered highlight">
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        CPF
                    </th>
                    <th>
                        Saldo
                    </th>
                    <th></th>
                </tr>

                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => usuario.NomeUsuario)
                        </td>
                        <td class="cpf">
                            @Html.DisplayFor(modelItem => usuario.Cpf)
                        </td>
                        <td>
                            R$ @Html.DisplayFor(modelItem => usuario.SaldoUsuario)
                        </td>
                        <td style="width: 185px">
                            <a class="btn-floating waves-effect waves-light light-blue darken-3" title="Detalhes" onclick="AjaxJsUsuario.detalheUsuario('@usuario.Cpf', '@TempData["nomeLista"].ToString()');"><i class="material-icons">info_outline</i></a>
                            <a class="btn-floating waves-effect waves-light yellow darken-3" title="Editar" onclick="AjaxJsUsuario.editarUsuario('@usuario.Cpf', '@TempData["nomeLista"].ToString()');"><i class="material-icons">edit</i></a>
                            @if (!TempData["nomeLista"].ToString().Equals("Usuários Inativos"))
                            {
                                <a class="btn-floating waves-effect waves-light pink lighten-1" title="Desativar" onclick="AjaxJsUsuario.desativarUsuario('@usuario.Cpf', '@TempData["nomeLista"].ToString()');"><i class="material-icons">remove_shopping_cart</i></a>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="gridCelular">
            <ul class="collapsible" data-collapsible="accordion">
                @foreach (var usuario in Model)
                {
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons pink-text">account_circle</i>@usuario.NomeUsuario
                        </div>
                        <div class="collapsible-body">
                            <span>CPF : @usuario.Cpf</span>
                            <br />
                            <span>Saldo : R$ @usuario.SaldoUsuario</span>
                            <br /><br />
                            <a class="btn-floating waves-effect waves-light light-blue darken-3" onclick="AjaxJsUsuario.detalheUsuario('@usuario.Cpf');"><i class="material-icons">info_outline</i></a>
                            <a class="btn-floating waves-effect waves-light yellow darken-3" onclick="AjaxJsUsuario.editarUsuario('@usuario.Cpf');"><i class="material-icons">edit</i></a>
                            <a class="btn-floating waves-effect waves-light pink lighten-1" onclick="AjaxJsUsuario.desativarUsuario('@usuario.Cpf');"><i class="material-icons">remove_shopping_cart</i></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
</div>
