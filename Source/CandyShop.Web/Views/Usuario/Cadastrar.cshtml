@model  CandyShop.Application.ViewModels.UsuarioViewModel

@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/Content/Usuario/formCadastroUsuario.css?d=@DateTime.Now.Ticks" />
<script type="text/javascript" src="~/Js/Usuario/scriptsCadastroUsuario.js?d=@DateTime.Now.Ticks"></script>

<div class="container" style="margin-top: 2%;">
    <div class="col s12 m12">
        <div class="card-panel white" style="padding-bottom: 0;">
            <form class="col s12" id="formCadastro">
                <div class="row" style="margin-top: -3%;">
                    <div class="center">
                        <h2 class="center pink-text" style="font-weight: bold">Cadastrar usuário</h2>
                        <div>
                            <label for="fotoUsuario">
                                @{
                                    var caminho = ImagensConfig.EnderecoImagens;
                                }
                                <img id="imagem" class="center tooltipped" data-position="bottom" data-delay="50" data-tooltip="Foto do usuário" src="@caminho/fotoUsuario.ico" alt="imagem não disponível :(" />
                            </label>
                            <br />
                            <br />
                            <a class="btn" id="removerImagem"><i class="material-icons left">block</i>Remover</a>
                            <input id="fotoUsuario" type="file" class="file-path validate" style="display: none" accept="image/*">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="Nome" name="NomeUsuario" maxlength="50" type="text" class="validate" required data-length="50" autocomplete="off">
                            <label for="Nome">Nome do usuário:</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="cpf" name="CPF" type="text" class="validate" maxlength="14" required>
                            <label for="cpf">CPF do usuário:</label>
                            <div id="ErroCpf"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="EmailCadastro" name="Email" type="text" class="validate" placeholder="example@smn.com.br" maxlength="50" required>
                            <label for="EmailCadastro">Email do usuário:</label>
                        </div>
                        <div class="input-field col s6">
                            <select name="Classificacao" id="Classificacao">
                                <option value="" disabled>Tipo da conta</option>
                                <option value="U" selected>Usuario</option>
                                <option value="A">Administrador</option>
                            </select>
                            <label>Tipo de Usuário:</label>
                        </div>
                    </div>
                    <div class="row center">
                        <a class="waves-effect waves-light btn-large botaoVoltar"><i class="material-icons left">arrow_back</i>Voltar</a>
                        <a class="waves-effect waves-light btn-large botaoCadastro" disabled><i class="material-icons left">add_circle</i>Cadastrar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


