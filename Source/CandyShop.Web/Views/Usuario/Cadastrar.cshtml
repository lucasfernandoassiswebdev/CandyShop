@model  CandyShop.Application.ViewModels.Usuario 

@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="../../Content/formCadastroUsuario.css" />
<script type="text/javascript" src="../../Js/scriptsCadastroUsuario.js"></script>

<div class="container">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="center">
                    <h1 class="center">Cadastrar usuário</h1>
                    <img id="imagem" class="center" src="../../Imagens/user.png" alt="imagem não disponível :("/>
                </div>
                <div class="file-field input-field">
                    <div class="btn-floating center alinhamento">
                        <span class="center">
                            <a>
                                <i class="material-icons">add</i>
                            </a>
                        </span>
                        <input id="fotoUsuario" type="file" accept="image/x-png,image/gif,image/jpeg">
                    </div>
                    <div class="file-path-wrapper" style="display: none">
                        <div class="file-path-wrapper">
                            <input placeholder="foto do usuário" class="file-path validate">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="Nome" name="Nome" type="text" class="validate" required data-length="50" autocomplete="off">
                        <label for="Nome">Nome do usuário:</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="cpf" name="CPF" type="text" class="validate" required="">
                        <label for="cpf">CPF do usuário:</label>
                    </div>
                </div>
                <div class="row center">
                    <a class="waves-effect waves-light btn-large" onclick="AjaxJs.listaUsuario()"><i class="material-icons left">arrow_back</i>Voltar</a> 
                    <a class="waves-effect waves-light btn-large" onclick="AjaxJs.concluirCadastroUsuario()"><i class="material-icons left">add_circle</i>Cadastrar</a>
                </div>
            </div>
        </form>
    </div>
</div>
