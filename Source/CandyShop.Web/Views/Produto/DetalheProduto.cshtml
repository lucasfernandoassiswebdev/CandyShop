@using CandyShop.Web.Helpers
@model CandyShop.Application.ViewModels.ProdutoViewModel

@{
    Layout = null;
    string voltar;
}

<link rel="stylesheet" type="text/css" href="~/Content/Produto/detalheProduto.css?d=@DateTime.Now.Ticks" />

<div class="center container">
    <h4 class="pink-text">Detalhes do Produto</h4>
    <hr />
    <div class="col s12">
        @{ var nomeA = Model.IdProduto + "_A.jpg";}
        @{ var nomeB = @Model.IdProduto + "_B.jpg";}
        @{ var nomeC = @Model.IdProduto + "_C.jpg";}

        <img src="@Html.UrlContent(TempData["caminhoImagensProdutos"], nomeA)" />
        <img src="@Html.UrlContent(TempData["caminhoImagensProdutos"], nomeB)" />
        <img src="@Html.UrlContent(TempData["caminhoImagensProdutos"], nomeC)" />        

        <table class="striped centered bordered" style="margin-bottom:50px">
            <tbody>
            <tr>
                <td class="negrito">Id</td>
                <td>@Model.IdProduto</td>
            </tr>
            <tr>
                <td class="negrito">Nome</td>
                <td>@Model.NomeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Preço</td>
                <td>R$ @Html.DisplayFor(model => model.PrecoProduto)</td>
            </tr>
            <tr>
                <td class="negrito">Categoria</td>
                <td>@Model.Categoria</td>
            </tr>
            <tr>
                <td class="negrito">Quantidade em estoque</td>
                <td>@Model.QtdeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Ativo</td>
                <td>@(Model.Ativo == "A" ? "Ativo" : "Inativo")</td>
            </tr>
            </tbody>
        </table>
        @{
            voltar = ViewBag.telaAnterior.ToString().Equals("Produtos Ativos") ? "AjaxJsProduto.listaProduto()" : "AjaxJsProduto.listarInativos()";
        }
        <a class="waves-effect waves-light btn" onclick=@voltar><i class="material-icons left">arrow_back</i>Voltar</a>
    </div>
</div>


