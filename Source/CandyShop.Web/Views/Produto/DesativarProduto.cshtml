@model CandyShop.Application.ViewModels.ProdutoViewModel

@{
    Layout = null;
    string voltar;
}

<link rel="stylesheet" type="text/css" href="~/Content/Produto/desativarProduto.css?d=@DateTime.Now.Ticks" />

<div class="center container">
    <div class="col s12">
        <h4 class="center pink-text">Desativar Produto</h4>
        <p>Tem certeza que deseja desativar este produto?</p>
        <hr />

        @{ var nomeA = @Model.IdProduto + "_A.jpg";}
        @{ var nomeB = @Model.IdProduto + "_B.jpg";}
        @{ var nomeC = @Model.IdProduto + "_C.jpg";}

        <img src="@TempData["caminhoImagensProdutos"]/@nomeA?d=@DateTime.Now.Ticks" />
        <img src="@TempData["caminhoImagensProdutos"]/@nomeB?d=@DateTime.Now.Ticks" />
        <img src="@TempData["caminhoImagensProdutos"]/@nomeC?d=@DateTime.Now.Ticks" />

        <table class="striped highlight centered bordered" style="margin-bottom:50px">
            <tbody>
            <tr>
                <td class="negrito">Id</td>
                <td>@Model.IdProduto</td>
            </tr>
            <tr>
                <td class="negrito">Nome</td>
                <td>@Model.NomeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Preço</td>
                <td>R$ @Model.PrecoProduto</td>
            </tr>
            <tr>
                <td class="negrito">Categoria</td>
                <td>@Model.Categoria</td>
            </tr>
            <tr>
                <td class="negrito">Quantidade em estoque</td>
                <td>@Model.QtdeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Ativo</td>
                <td>@if (Model.Ativo == "A")
                    {<text>Ativo</text>}
                    else
                    {<text>Inativo</text>}</td>
            </tr>
            </tbody>
        </table>
        @if (ViewBag.telaAnterior.ToString().Equals("Produtos Ativos"))
        {
            voltar = "AjaxJsProduto.listaProduto()";
        }
        else
        {
            voltar = "AjaxJsProduto.listarInativos()";
        }
        <div class="row">
            <a class="waves-effect waves-light btn-large" onclick=@voltar><i class="material-icons left">arrow_back</i>Voltar</a>
            <a class="waves-effect waves-light btn-large" onclick="AjaxJsProduto.desativarProdutoConfirmado(@Model.IdProduto)"><i class="material-icons left">delete</i>Excluir</a>
        </div>
    </div>
</div>

