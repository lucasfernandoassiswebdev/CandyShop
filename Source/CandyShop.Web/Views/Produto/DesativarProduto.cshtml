@model CandyShop.Application.ViewModels.ProdutoViewModel

@{
    Layout = null;
    string voltar;
}

<link rel="stylesheet" type="text/css" href="~/Content/Produto/desativarProduto.css?d=@DateTime.Now.Ticks" />

<div class="center container">
    <div class="col s12">
        <h4 class="center pink-text">Desativar Produto</h4>
        <p>Tem certeza que deseja desativar este produto?</p>
        <hr />

        <img src="@Model.ImagemA" />
        <img src="@Model.ImagemB" />
        <img src="@Model.ImagemC" />

        <table class="striped highlight centered bordered" style="margin-bottom:50px">
            <tbody>
            <tr>
                <td class="negrito">Id</td>
                <td>@Model.IdProduto</td>
            </tr>
            <tr>
                <td class="negrito">Nome</td>
                <td>@Model.NomeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Preço</td>
                <td>@string.Format("{0:C}", Model.PrecoProduto)</td>
            </tr>
            <tr>
                <td class="negrito">Categoria</td>
                <td>@Model.Categoria</td>
            </tr>
            <tr>
                <td class="negrito">Quantidade em estoque</td>
                <td>@Model.QtdeProduto</td>
            </tr>
            <tr>
                <td class="negrito">Ativo</td>
                <td>@if (Model.Ativo == "A")
                    {<text>Ativo</text>}
                    else
                    {<text>Inativo</text>}</td>
            </tr>
            </tbody>
        </table>
        @{
            voltar = ViewBag.telaAnterior.ToString().Equals("Produtos Ativos") ? "AjaxJsProduto.listaProduto()" : "AjaxJsProduto.listarInativos()";
        }
        <div class="row">
            <a class="waves-effect waves-light btn-large" onclick=@voltar><i class="material-icons left">arrow_back</i>Voltar</a>
            <a class="waves-effect waves-light btn-large" onclick="AjaxJsProduto.desativarProdutoConfirmado(@Model.IdProduto)"><i class="material-icons left">delete</i>Desativar</a>
        </div>
    </div>
</div>

